{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"typeRoots": ["./node_modules/@types", "./@types"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.tsx", "lib/**/*.ts"],
	"exclude": ["node_modules", "pages/**/*.ts"]
}